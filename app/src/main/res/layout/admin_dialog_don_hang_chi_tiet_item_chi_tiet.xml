<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/admin_dialog_don_hang_chi_tiet_item_chi_tiet_anh"
            android:src="@drawable/fire_fox"
            android:layout_width="56dp"
            android:layout_height="56dp"/>

        <LinearLayout
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="122dp">

            <TextView
                android:id="@+id/admin_dialog_don_hang_chi_tiet_item_chi_tiet_ten_san_pham"
                android:textSize="16sp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:text="Ten: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/admin_dialog_don_hang_chi_tiet_item_chi_tiet_gia_tien"
                android:layout_marginTop="8dp"
                android:textColor="@color/red"
                android:textSize="16sp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:text="gia tien: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/admin_dialog_don_hang_chi_tiet_item_chi_tiet_so_luong"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:text="So luong: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/admin_dialog_don_hang_chi_tiet_item_chi_tiet_mau_sac"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:text="Mau sac: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>



    </LinearLayout>
</ScrollView>