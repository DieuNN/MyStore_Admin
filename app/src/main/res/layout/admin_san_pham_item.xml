<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:minWidth="230dp"
    android:minHeight="200dp"
    android:id="@+id/admin_san_pham_item"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/admin_san_pham_item_xoa"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_gravity="end"
        android:src="@drawable/ic_baseline_delete_24"
        android:layout_width="24dp"
        android:layout_height="24dp"/>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/admin_san_pham_item_anh"
            android:layout_gravity="center"
            android:layout_width="110dp"
            android:layout_height="110dp"/>

        <TextView
            android:textAlignment="center"
            android:id="@+id/admin_sanpham_item_ten"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:text="ÁO POLO REMAKE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:gravity="bottom|center"
                android:textAlignment="gravity"
                android:id="@+id/admin_sanpham_item_gia_truoc"
                android:layout_weight="1"
                android:text="ÁO POLO REMAKE"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:gravity="bottom|center"
                android:textAlignment="gravity"
                android:layout_weight="1"
                android:id="@+id/admin_sanpham_item_gia_sau"
                android:textColor="@color/red"
                android:text="ÁO POLO REMAKE"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>


    </LinearLayout>





</androidx.cardview.widget.CardView>